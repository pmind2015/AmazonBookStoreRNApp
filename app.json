{
  "expo": {
    "name": "Amazon",
    "description": "Амазон номын дэлгүүрийн апп.",
    "slug": "AmazonBookStore",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/logo-square.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "mn.amazon.bookstore",
      "buildNumber": "1.0.1"
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "versionCode": 2,
      "package": "mn.amazon.bookstore",
      "useNextNotificationsApi": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo-square.png",
        "backgroundColor": "#fff"
      }
    }
  }
}
